{
  "name": "opencode-diffs",
  "version": "0.0.1",
  "description": "Diff review plugin for OpenCode â€” browser-based code review with @pierre/diffs",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "diff",
    "code-review",
    "diffs",
    "pierre-diffs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oorestisime/opencode-diffs.git"
  },
  "homepage": "https://github.com/oorestisime/opencode-diffs",
  "main": "./dist/plugin/index.mjs",
  "exports": {
    ".": "./dist/plugin/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && cp src/ui/review.html dist/ui/review.html",
    "lint": "oxlint src/",
    "format": "oxfmt --write src/",
    "format:check": "oxfmt src/",
    "typecheck": "tsc --noEmit",
    "check": "bun run format:check && bun run lint && bun run typecheck",
    "prepublishOnly": "bun run check && bun run build"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.2.5",
    "@pierre/diffs": "1.1.0-beta.13"
  },
  "devDependencies": {
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "^1.2.18",
    "@types/node": "^22.15.21",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.8.3"
  }
}
